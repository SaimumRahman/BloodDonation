<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardVIew"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="@drawable/popup"
        >

        <TextView
            android:id="@+id/BloodGroupTextViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Blood Group"
            android:textSize="35sp" />


        <LinearLayout
            android:id="@+id/llll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BloodGroupTextViews"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/FromdateTextView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Quantiy"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/TOTextView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="TO"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ToDateTextView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Color"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rrrr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llll"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/LocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Item Name"
                android:textSize="22sp"
                android:layout_below="@+id/llll"/>
            <TextView
                android:id="@+id/dateassigned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginLeft="25dp"
                android:text="Not Yet Assigned"
                android:textSize="22sp"
                android:layout_below="@+id/llll"/>
        </LinearLayout>

        <TextView
            android:id="@+id/ClickToSeeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Click Here See Details"
            android:textSize="25sp"
            android:layout_below="@+id/rrrr"/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>